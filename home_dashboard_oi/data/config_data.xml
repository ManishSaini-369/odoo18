        <record id="odi_hp_graph_01" model="odi.hp.config">
            <field name="db_type">graph</field>
            <field name="name">Graph One</field>
            <field name="graph_type">pie</field>
            <field name="graph_colors">#f8e54b, #70cac1, #659d4e, #208cc2, #8e559e, #ffc25b, #584999, #cf3650, #fe7139, #f65337</field>
            <field name="model">res.company</field>
            <field name="field">''</field>
            <field name="date_field">create_date</field>
            <field name="domain">[]</field>
            <field name="psql">
                <![CDATA[
                SELECT t1.name, t1.partner_id, COUNT(*) AS count
                FROM res_company AS t1
                WHERE 1=1
                GROUP BY t1.name, t1.partner_id
                ]]>
            </field>
            <field name="category">kpi</field>
            <field name="is_all" eval="True"/>
            <field name="model_id" eval="ref('base.model_res_company')"/>
            <field name="custom_psql">True</field>
        </record>


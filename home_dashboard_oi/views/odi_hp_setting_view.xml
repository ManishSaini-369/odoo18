                                    </group>
                                    <group>
                                        <field name="fav2_tab" string="Open In"/>  
                                    </group>
                                </group>

                                <group col="5">  
                                    <group>
                                        <field name="fav3_name" string="Favorite 3"/>
                                    </group>
                                    <group>
                                        <field name="fav3_url" string="Url"/>
                                    </group>
                                    <group>
                                        <field name="fav3_icon" string="Icon"/>
                                    </group>
                                    <group>

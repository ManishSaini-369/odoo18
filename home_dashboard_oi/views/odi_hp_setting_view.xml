                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="view_odi_hp_setting_list" model="ir.ui.view">
            <field name="name">odi.hp.setting.list</field>
            <field name="model">odi.hp.setting</field>
            <field name="arch" type="xml">
                <list string="Settings">
                    <field name="name"/>
                    <field name="graph_layout"/>
                    <field name="list_layout"/>
                    <field name="card"/>
                    <field name="card_style" invisible="1"/>
                    <field name="theme"/>
                    <field name="date_slicer"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="odi_hp_setting_action" model="ir.actions.act_window">
            <field name="name">Board Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odi.hp.setting</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_odi_hp_setting_list"/>
            <field name="domain">[]</field>
            <field name="context">{'default_readonly': False}</field>
        </record>
    </data>
</odoo>

<odoo>
    <data>
        <!-- Form View  -->
        <record id="view_odi_hp_setting_form" model="ir.ui.view">
            <field name="name">odi.hp.setting.form</field>
            <field name="model">odi.hp.setting</field>
            <field name="arch" type="xml">
                <form string="Board Setting">
                    <header>
                       
                    </header>
                    <sheet>
                        <notebook>
                            <!-- General Settings -->
                            <page string="General Settings">
                                <group>
                                    <group>
                                        <field name="name" readonly="0"/>
                                        <field name="graph_layout"/>
                                        <field name="list_layout"/>
                                        <field name="card"/>
                                        <field name="date_slicer"/>
                                    </group>
                                    <group>
                                        <field name="card_style" invisible="1"/>
                                        <field name="theme"/>
                                        <field name="company_id"/>
                                        <field name="user_id"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Combined Favorites in Four Columns -->

                            <page string="Favorites">
                                <group col="5">  
                                    <group>
                                        <field name="fav1_name" string="Favorite 1"/>
                                    </group>
                                    <group>
                                        <field name="fav1_url" string="Url"/>
                                    </group>
                                    <group>
                                        <field name="fav1_icon" string="Icon"/>
                                    </group>
                                    <group>
                                        <field name="fav1_style" string="Style"/>
                                    </group>
                                    <group>
                                        <field name="fav1_tab" string="Open In"/>
                                    </group>
                                </group>
                                
                                <group col="5">  
                                    <group>
                                        <field name="fav2_name" string="Favorite 2"/>
                                    </group>
                                    <group>
                                        <field name="fav2_url" string="Url"/>
                                    </group>
